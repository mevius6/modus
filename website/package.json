{
  "type": "module",
  "name": "modus",
  "version": "1.0.0",
  "description": "",
  "browserslist": "> 0.5%, last 2 versions, not dead, not op_mini all",
  "config": {
    "repo": "https://github.com/mevius6/${npm_package_name}",
    "cert": {
      "add": "$(grep '^CERT_PATH' .env | cut -d '=' -f2)",
      "key": "$(grep '^KEY_PATH' .env | cut -d '=' -f2)"
    },
    "port": {
      "http": 8080,
      "https": 8443
    }
  },
  "scripts": {
    "start": "vite --host",
    "build": "vite build --base=./ --debug transform",
    "serve": "vite preview --port 8080",
    "serve:src": "vite src preview --port 8080",
    "build:css": "postcss src/css/main.css -o main.min.css",
    "lib:props": "postcss src/css/props/index.css -o props.min.css",
    "clean": "rm -rf dist && rm -rf src/dist",
    "copy": "cp -r src/static/* ./public"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cssnano": "^7.0.4",
    "eslint": "^9.5.0",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^9.5.16",
    "stylelint-order": "^6.0.4",
    "vite": "^5.3.2"
  }
}
